<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Wibci.MauiControls.Pages.MarkdownPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Wibci.MauiControls.Controls"
             Title="MarkdownPage">
	<ScrollView>
		<VerticalStackLayout>
			<VerticalStackLayout.Resources>
				<Style TargetType="Label">
					<Setter Property="Margin" Value="8" />
				</Style>
			</VerticalStackLayout.Resources>
			<Label HorizontalOptions="Center"
			       Text="Welcome to .NET MAUI MarkdownTextView!"
			       VerticalOptions="Center" />

			<Label Text="RAW" />
			<Label x:Name="_lblRaw" />
			<Label Text="MD -&gt; HTML -&gt; Native Attributed Text" />
			<controls:MarkdownTextView x:Name="_lblMarkdown" Margin="8" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>